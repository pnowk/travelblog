extends layout

block content
    h1 #{title}
    form(method='POST' action='/articles/edit/' + article._id)
        #form-group
            label Title:
            input.form-control(name='title', type='text', value=article.title)
        //- #form-group
        //-     label Author:
        //-     input.form-control(name='author', type='text', value=article.author)
        #form-group
            label Body:
            textarea.form-control(name='article1' rows='10') #{article.body}
        br
        #form-group
            input.btn.btn-primary(type='submit', value='Submit')
        br
    script(src='/js/ckeditor.js')